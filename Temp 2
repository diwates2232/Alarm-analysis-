                variant="outlined" size="small"
                onClick={() => exportSection(cardsRef.current, 'Cards_Slide.pptx')}
              >
                Export Cards
              </Button>
              <Button
                variant="outlined" size="small"
                onClick={() => exportSection(chartsRef.current, 'Charts_Slide.pptx')}
              >
                Export Charts
